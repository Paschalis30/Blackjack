import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {

		int valuePlayer = 0;
		int valueDealer = 0;
		ArrayList<String> cardsPlayer = new ArrayList<String>(200);
		ArrayList<String> cardsDealer = new ArrayList<String>(200);
		;
		Cards cards = new Cards();

		String answer;
		System.out.println("**************************");
		System.out.println("WELCOME TO BALCKJACK GAME");
		System.out.println("**************************");
		System.out.println("Client write Your name hier:");
		Scanner input = new Scanner(System.in);

		answer = input.next();
		Player Client = new Player(answer);
		Player Dealer = new Player("Dealer");
		cards.shuffleCards();
		System.out.println(answer + " give your amount of bet:");
		int answerBet = input.nextInt();
		System.out.println("");
		System.out.println("Dealer give your amount of bet:");
		int answerBet1 = input.nextInt();
		System.out.println("");

		System.out.println(answer + " :your bet is :" + answerBet + "euro");
		System.out.println("");
		System.out.println("Dealer:your bet is :" + answerBet1 + "euro");
		System.out.println("");
		System.out.println("Player is Your Turn!!!");
		System.out.println("");

		valuePlayer = Client.getCards(cardsPlayer, valuePlayer, cards.list);
		System.out.println(answer + ":Your current score is:" + valuePlayer);
		System.out.println("");
		if (valuePlayer > 21)

			System.out.println("Dealer won the Game,because you have more than 21 points");

		else {

			System.out.println("Dealer is Your Turn!!!");
			System.out.println("");
			valueDealer = Dealer.getCards(cardsDealer, valueDealer, cards.list);
			System.out.println("");
			System.out.println("Dealer your Current Score is:" + valueDealer);
			if (valueDealer > 21)
				System.out.println(answer + " won the Game,because you have more than 21 points");

			else {

				if (valuePlayer > valueDealer) {
					System.out.println(answer + ":You won the Game.Congratulations!!!");
				} else if (valuePlayer < valueDealer) {
					System.out.println("Dealer:You won the Game.Congratulations!!!");
				} else if (valuePlayer == valueDealer) {
					System.out.println("Noone was won the game!!!");
				}
			}

			/*
			 * cards.shareCards(Client); cards.shuffle(); cards.shareCards(Dealer);
			 */
		}
	}
}
